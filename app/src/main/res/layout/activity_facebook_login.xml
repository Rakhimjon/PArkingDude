<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_facebook_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.parking.parkingdude.activity.FacebookLogin">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark" />


    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        fb:login_text="@string/action_login_with_facebook"
        fb:logout_text="@string/action_login_with_facebook"
        android:textSize="18sp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textNumber"
        android:layout_below="@id/login_button"
        android:text="Or sign in with your phone number"
        android:gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:textSize="14sp"

        />

   <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/editNumber"
       android:layout_below="@+id/textNumber"
       android:layout_marginLeft="24dp"
       android:layout_marginRight="24dp"
       android:layout_marginTop="24dp"
       android:background="@drawable/edittext_bg"
       android:padding="12dp"
       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/verfyText"
        android:layout_below="@+id/editNumber"
        android:text="We well send a text to verfy your phone"
        android:gravity="center_horizontal"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/signIn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="39dp"
        android:background="@color/colorPrimary"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/verfyText"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
